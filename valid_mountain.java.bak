import java.util.*;
class  valid_mountain
{
	static Scanner sc=new Scanner(System.in);
	public static void main(String[] args) 
	{
		int[]a={0,3,2,1};
		System.out.println("The given array is a:"+Arrays.toString(a));
		if(check_mountain(a))
		{
			System.out.println("Is valid mountain");
		}
		else
		{
			System.out.println("Is not a valid mountain");
		}
		
	}
	public static boolean check_mountain(int []a)
	{
		int count=0;
		int []temp=a.clone();
		int peak_index=0;
		Arrays.sort(temp);
		//check length of array
		int length=a.length;
		if(length<3)
		{
			return false;
		}
		//find peak value
		int peak=0;
		for (int i=0; i<a.length; i++)
		{
			peak=Math.max(peak,a[i]);
		}
		//find index of peak value
		for (int j=0; j<a.length; j++)
		{
			if(a[j]==peak)
			{
				peak_index=j;
			}
		}
		//check peak value not in first and last
		if(a[0]==peak|| a[a.length-1]==peak )
		{
			return false;
		}
		
		//check duplicate value
		for (int k=0; k<a.length; k++)
		{
			if(temp[k]==peak)
			{
				count++;
			}
			if(count>1)
			{
				return false;
			}
			
		}
		//check strictly increasing and decreasing
		
		for (int l=peak_index; l>=1; l--)
		{
			if(a[l]<a[l-1])
			{
				return false;
				
			}
		}
		for (int m=peak_index; m<=a.length-2; m++)
		{
			if(a[m]<a[m+1])
			{
				return false;
			}
		}
		return true;
		
		
	}
	
}
