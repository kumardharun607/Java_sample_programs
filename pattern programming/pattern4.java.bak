class pattern4 
{
	public static void main(String[] args) 
	{
		int n=13;
		for (int i=0;i<n ;i++ )//rows
		{
			for (int j=0;j<n ;j++ )//coloumns
			{
				  //top left to bottom right
				  //------downwardown  ----forward up                 /*j==i-1 ||j==i-2 || j==i+1||j==i+3      ||*/
				if (i==1||j==n-1||i==j)
				{
					System.out.print("* ");
				}
				else
				{
					System.out.print("@ ");
				}
			}
			System.out.println();
		}
	}
}
