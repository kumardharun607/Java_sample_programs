import java.util.*;
class Interview_pattern 
  {
    public static void main(String[] args) {
        int n = 5;
		
		
         int k=0;
        // Upper part
        for (int i = 1; i <= n; i++) {
           k=i;
            // spaces
            for (int s = 1; s <= n - i; s++) {
                System.out.print(" ");
            }
            // stars with space
            for (int star = 0; star < i; star++) {
				
                System.out.print(k++ +" ");
            }
            System.out.println();
        }

        // Lower part
	
        for (int i = n - 1; i >= 1; i--) {
             int m=0;
			 int j=0;
			
            // spaces
            for (int s = 1; s <= n - i; s++) {
                System.out.print(" ");
            }
            // stars with space
            for (int star = 1; star <= i; star++) {
				
                System.out.print((n-i)-(m-j++)+" ");
            }
            System.out.println();
        }
    }
}
