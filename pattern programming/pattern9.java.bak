class pattern9 
{
	public static void main(String[] args) 
	{
		int n=5;
	
		for (int i=0;i<n ;i++ )
		{
			for (int j=0;j<n ;j++ )
			{
				if (i>=j)
				{
					System.out.print((j+1)%2 +"\t");
				}
				else
				{
					System.out.print(" \t");
				}
				
			}
			System.out.println();
		}
		
		
		//--------------------------------------------------------------
		
		for (int i=0;i<n ;i++ )
		{
			int k=0;
			for (int j=0;j<n ;j++ )
			{
				if (i>=j&&i+j>=n-1)
				{
					System.out.print(++k +"\t");
				}
				else
				{
					System.out.print(" \t");
				}
				
			}
			System.out.println();
		}
		for (int i=0;i<n ;i++ )
		{
			
			for (int j=0;j<n ;j++ )
			{
				if (j==i+2||i+j==n+1||j==i-2||i+j==2)
				{
					System.out.print(" ");
				}
				else
				{
					System.out.print("* ");
				}
				
			}
			System.out.println();
		}
	}
}
