class pattern_all_type_of_sums 
{
	public static void main(String[] args) 
	{
		int n=5;
		for (int i=0;i<n ;i++ )
		{
			for (int j=0;j<n ;j++ )
			{
				if (j==i+2||j==i-2||i+j==n+1||i+j==2)
				{
					System.out.print(" *");
				}
				else
				{
					System.out.print("  ");
				}
			}
			System.out.println();
		}
		
		//---------------------------------------------------------------------------
		

		for (int i=0;i<n ;i++ )
		{
			for (int j=0;j<n ;j++ )
			{
				if (i+j>=n-1&&i>=j/*i+j<=n-1&&i<=j*/)
				{
					System.out.print(" *");
				}
				else
				{
					System.out.print("  ");
				}
			}
			System.out.println();
		}
		for (int i=1;i<n ;i++ )
		{
			for (int j=0;j<n ;j++ )
			{
				if (i+j<=n-1&&i<=j)
				{
					System.out.print(" *");
				}
				else
				{
					System.out.print("  ");
				}
			}
			System.out.println();
		}
		
		//---------------------------------------------------------------------------
		
		for (int i=0;i<n ;i++ )
		{
			for (int j=0;j<n ;j++ )
			{
				if (i>=j)
				{
					System.out.print(i+1+"\t");
				}
				else
				{
					System.out.print(" \t");
				}
			}
			for (int j=0;j<n ;j++ )
			{
				if (i>j)
				{
					System.out.print(i+1+"\t");
				}
				else
				{
					System.out.print(" \t");
				}
			}
			System.out.println();
		}
		
		//-------------------------------------------------
		int k=0;
		for (int i=0;i<n ;i++ )
		{
			for (int j=0;j<n ;j++ )
			{
				if (i>=j)
				{
					System.out.print(++k+" ");
				}
				else
				{
					System.out.print("  ");
				}
			}
			System.out.println();
		}
		
		//-------------------------------------------------
		int m=0;
		for (int i=0;i<n ;i++ )
		{
			for (int j=0;j<n ;j++ )
			{
				if (i>=j)
				{
					System.out.print((++m%2)+" ");
				}
				else
				{
					System.out.print("  ");
				}
			}
			System.out.println();
		}
		//--------------------------------------------
		
		for (int i=0;i<n ;i++ )
		{
			int l=0;
			for (int j=0;j<n ;j++ )
			{
				if (i>=j)
				{
					System.out.print(l+++"\t");
				}
				else
				{
					System.out.print(" \t");
				}
			}
			System.out.println();
		}
		
		//----------------------------------------
		
		for (int i=0;i<n ;i++ )
		{
			int p=0;
			for (int j=0;j<n ;j++ )
			{
				if (i>=j)
				{
					System.out.print(++p+"\t");
				}
				else
				{
					System.out.print(" \t");
				}
			}
			System.out.println();
		}
		
		//----------------------------------------
		
		for (int i=0;i<n ;i++ )
		{
			
			for (int j=0;j<n ;j++ )
			{
				if (i>=j)
				{
					System.out.print((n-1)-(i-j)+"\t");
				}
				else
				{
					System.out.print(" \t");
				}
			}
			System.out.println();
		}
		
		//----------------------------------------
		
		for (int i=0;i<n ;i++ )
		{
			
			for (int j=0;j<n ;j++ )
			{
				if (i>=j)
				{
					System.out.print(i+1+"\t");
				}
				else
				{
					System.out.print(" \t");
				}
			}
			for (int j=0;j<n ;j++ )
			{
				if (i>j)
				{
					System.out.print(i+1+"\t");
				}
				else
				{
					System.out.print(" \t");
				}
			}
			System.out.println();
		}
		
		//----------------------------------------
		for (int i=0;i<n ;i++ )
		{
		
			for (int j=0;j<n ;j++ )
			{
				if (i>=j)
				{
					System.out.print((j+1)%2+"\t");
				}
				else
				{
					System.out.print(" \t");
				}
			}
			System.out.println();
		}
		
		//----------------------------------------
		
		for (int i=0;i<n ;i++ )
		{
		    int s=1;
			for (int j=0;j<n ;j++ )
			{
				if (i>=j&&i+j>=n-1)
				{
					System.out.print((s+++"\t");
				}
				else
				{
					System.out.print(" \t");
				}
			}
			System.out.println();
		}
		
		//----------------------------------------
		
		
		
	}
}
