import java.util.*;
class perfect_square 
{
	static Scanner sc=new Scanner(System.in);
	public static void main(String[] args) 
	{
		System.out.print("Enter the number:");
		int n=sc.nextInt();
		int ans=perfect(n);
		if(ans*ans==n)
		{
			System.out.println("The given number is perfect Square number:"+ans+"*"+ans+"="+n);
		}
		else
		{
			System.out.println("The given number is not a perfect Square number");
		}
	}
	public static int perfect(int n)
	{
		int a=0;
		for (int i=0;i<n/2 ;i++ )
		{
			if(i*i==n)
			{
				return i;
			}
		}
		a=Integer.MIN_VALUE;
		return a;
	}
}
