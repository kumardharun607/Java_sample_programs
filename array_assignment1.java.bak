import java.util.*;
class array_assignment1
{
	public static void main(String[] args) 
	{
		int []a={234,2814,316,721,15,14};
		int []b=a.clone();
		System.out.println("The original array:"+Arrays.toString(a));
		
		int res[]=sum_of_largest_and_smallest(a);
		System.out.println("Find sum of the largest and smallest of the array:"+Arrays.toString(res));
		int l=0;
		int r=res.length-1;
		while(l<r)
		{
			int temp=res[l];
			res[l]=res[r];
			res[r]=temp;
			l--;
			r++;
		}
		System.out.println("After reversing  of the above array:"+Arrays.toString(res));
		for (int i=0;i<res.length ;i++ )
		{
			if(res[i]%2==0)
			{
				for (int j=1;j<=res[i] ;j++ )
				{
					System.out.print(b[i]+"\t");
				}
				System.out.println();
			}
			else
			{
				System.out.print(b[i]);
				System.out.println();
			}
		}
		
	}
	
	public static int[] sum_of_largest_and_smallest(int []a)
	{
		int []res=new int[a.length];
		for (int i=0,x=0;i<a.length ;i++,x++ )
		{
			
			int temp=a[i];
			int smallest=Integer.MAX_VALUE;
			while(a[i]>0)
			{
				int m=a[i]%10;
				if(smallest>m)
				{
					smallest=m;
				}
				
				a[i]=a[i]/10;
			}
			int largest=Integer.MIN_VALUE;
			while(temp>0)
			{
				int n=temp%10;
				largest=Math.max(largest,n);
				
				temp=temp/10;
			}
			
		
			int sum=largest+smallest;
			
			res[i]=sum;
			
			
		}
		return res;
	}
			
				
		
}
