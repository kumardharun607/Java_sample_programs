import java.util.*;
class  pattern_1
{
	static Scanner sc=new Scanner (System.in);
	public static void main(String[] args) throws Exception
	{
		for(int i=1;i<=7;i++)
		{
			System.out.print("\n");
			for (int j=1;j<=i ;j++ )
			{
				System.out.print("* ");
				for (int k=j;k>=1 ;k--)
			    {
					System.out.print("* "); 
				}
			}
		}
				
			
		
	}
	
}
