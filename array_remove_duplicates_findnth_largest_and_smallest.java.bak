import java.util.*;
class array_remove_duplicates_findnth_largest_and_smallest 
{
	static Scanner sc=new Scanner(System.in);
	public static void main(String[] args) 
	{
		int []a={18,14,7,18,2,7,2,6,3,2};
		System.out.println("The original array:"+Arrays.toString(a));
		int []res=removedup(a);
		System.out.println("After removing of duplicate elements:"+Arrays.toString(res));
		System.out.println("Enter you wanted nth largest number:");
		int n=sc.nextInt();
		
		System.out.println("Enter you wanted nth smallest number:");
		int m=sc.nextInt();
		if((findNthlargest(res,n)==-1) || (findNthsmallest(res,n)==-1))
		{
			System.out.println("Array index out of bounds");
		}
		else
		{
			System.out.println("this your nth largest number:"+findNthlargest(res,n));
		    System.out.println("this your nth smallest number:"+findNthsmallest(res,n));
		}
	}
	public static int[] removedup(int []a)
	{
		Arrays.sort(a);
		int b[]=new int[a.length];
		int x=0;
		for (int i=0;i<a.length-1 ;i++ )
		{
			if (a[i]!=a[i+1])
			{
				b[x]=a[i];
				x++;
			}
		}
		b[x]=a[a.length-1];
		int res[]=new int[x];
		for (int i=0;i<res.length ;i++)
		{
			res[i]=b[i];
		}
		return res;
	}
	public static int findNthlargest(int []a,int n)
	{
		int res[]=removedup(a);
		Arrays.sort(res);
		if(n<=res.length )
		{
			return res[res.length-n];
		}
		else
		{
			return -1;
		}
	}
	public static int findNthsmallest(int []a,int n)
	{
		int res[]=removedup(a);
		Arrays.sort(res);
		if(n<=res.length )
		{
			return res[n-1];
		}
		else
		{
			return -1;
		}
	}
}
