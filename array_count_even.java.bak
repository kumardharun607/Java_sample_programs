import java.util.*;
class  array_count_even
{
	static Scanner sc=new Scanner(System.in);
	public static void main(String[] args) 
	{
		int[]a={6,2,3,5,7,11,8,9,10,13,4,6,8};
		System.out.println("The given array is a:"+Arrays.toString(a));
		count_even(a);
		
	}
	public static int count_even(int []b)
	{
		int count=0;
		int sum=0;
		String even_numbers=""; 
		for(int i=0;i<b.length;i++)
		{
			if(b[i]%2==0)
			{
				count+=1;
				sum+=b[i];
				even_numbers+=b[i]+" ";
			}
		}
		System.out.println("The even numbers present  in this array is:"+even_numbers);
		System.out.println("The total  even numbers in this array is:"+count);
		System.out.println("The total  even numbers in this array is:"+sum);
		
		return count;
	}
	
}
